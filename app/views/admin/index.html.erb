<div class="flex flex-col w-full"> 
  <div class="w-full">
    <h1 class="mx-auto lext-lg font-bold text-4xl">Welcome, <%= @username %></h1>
    <p class="my-2">It's <%= Time.now %>. We have <%= pluralize(@total_orders, "order") %>.</p>
  </div>
  <div class="w-full flex flex-row flex-wrap gap-2">              
    <%= link_to orders_path, class:'flex basis-52 gap-5 grow flex-col justify-center items-center bg-green-800 text-white rounded-xl font-bold h-32 hover:border-4 hover:grow-[2] border-green-950 transition-all duration-300' do %>
