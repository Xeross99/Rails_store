<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Orders</h1>
    <%= link_to 'New order', new_order_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="orders" class="min-w-full">
    <% @orders.each do |order| %>
      <div class="my-2 p-2 <%= cycle('bg-green-50', 'bg-white') %>">
        <table>
          <tr>
            <td class="font-bold py-2 px-5 text-center">Id</td>	<td class="font-bold py-2 px-5 text-center">Name</td>	<td class="font-bold py-2 px-5 text-center">Address</td>	<td class="font-bold py-2 px-5 text-center">Pay type</td>	<td class="font-bold py-2 px-5 text-center">E-mail</td>	<td class="font-bold py-2 px-5 text-center">Created at:</td>
          </tr>
          <tr>
            <td><%= order.id %></td><td><%= order.name %></td><td><%= order.address %></td><td><%= order.pay_type %></td><td><%= order.email %></td><td><%= order.created_at.to_formatted_s(:long) %></td>          
          </tr>
        </table>
      </div>
    <% end %>
  </div>
</div>